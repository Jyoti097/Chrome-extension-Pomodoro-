{
    "manifest_version": 3,
    "name": "Pomodoro",
    "description": "Manage time smartly",
    "version": "1.0.0",
    "icons":{
        "16": "icons/clock-16.png",
        "32": "icons/clock-32.png",
        "48": "icons/clock-48.png",
        "128": "icons/clock-128.png"
    },
    "action" : {
        "default-icon":{
            "16": "icons/clock-16.png",
            "32": "icons/clock-32.png",
            "48": "icons/clock-48.png",
            "128": "icons/clock-128.png"
        }
    },
    "permissions" : ["contextMenus", "alarms", "notifications"],
    "background": {
        "service_worker": "service_worker.js"
    }
}